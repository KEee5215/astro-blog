---
const { post } = Astro.props;
---

<li class="blog-post">
  <div class="background"></div>
  <a href={post.url}>{post.frontmatter.title}</a>
</li>

<style>
  a {
    /* color: #282727; */
    font-size: 1.6em;
    font-weight: 800;
  }

  .blog-post {
    border-radius: 0.5rem;
    width: 100%;
    height: 5rem;
    cursor: pointer;
    position: relative;
    overflow: hidden;
  }

  .blog-post a {
    margin: 1rem 2rem;
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: flex-start;
  }

  /* .blog-post:hover {
    background-color: #c5d6e2;
  } */

  @keyframes slideIn {
    from {
      transform: translateX(-100%);
    }
    to {
      transform: translateX(0);
    }
  }

  .background {
    position: absolute;
    inset: 0;
    background-color: #91c9f18d;
    transform: translateX(-100%);
  }

  .blog-post:hover .background {
    animation: slideIn 0.3s ease-in-out forwards;
  }
</style>

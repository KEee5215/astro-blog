---
const { platform, username } = Astro.props;
---

<div class="social">
  <a href={`https://www.${platform}.com/${username}`}
    ><img src={`../${platform}.svg`} alt={platform} />
    {platform}
  </a>
</div>

<style>
  a {
    padding: 0.5rem 1rem;
    color: white;
    text-decoration: none;
  }
  img {
    /* margin-top: 0.5rem; */
    width: 1.5rem;
    height: 1.5rem;
  }

  .social {
    background-color: #acacac;
    border-radius: 0.5rem;
    padding: 0.5rem 1rem;
  }
</style>
